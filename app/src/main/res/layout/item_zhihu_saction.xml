<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_two_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_two_one_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_two_one_one"
                android:layout_width="match_parent"
                android:transitionName="@string/zhihu_theme"
                android:layout_height="95dp"
                android:background="@mipmap/img_four_bi_three"
                android:scaleType="fitXY" />

            <!--android:background="@drawable/img_two_bi_one"-->

            <TextView
                android:id="@+id/tv_two_one_one_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/colorContent"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="@color/colorPageBg" />

        <LinearLayout
            android:id="@+id/ll_two_one_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_two_one_two"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:transitionName="@string/zhihu_theme"
                android:background="@mipmap/img_four_bi_three"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_two_one_two_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/colorContent"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_one_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <View
            android:id="@+id/ll_one_photo_line"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/colorPageBg"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_one_photo"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:transitionName="@string/zhihu_theme"
            android:background="@mipmap/img_two_bi_one"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_one_photo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/colorContent"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
