<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_two_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/ll_two_one_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_two_one_one"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@mipmap/img_four_bi_three"
            android:scaleType="fitXY"

            android:transitionName="@string/zhihu_theme" />

        <!--android:background="@drawable/img_two_bi_one"-->

        <TextView
            android:id="@+id/tv_two_one_one_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/colorContent"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:background="@color/colorPageBg" />

    <LinearLayout
        android:id="@+id/ll_two_one_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_two_one_two"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@mipmap/img_four_bi_three"
            android:scaleType="fitXY"
            android:transitionName="@string/zhihu_theme" />

        <TextView
            android:id="@+id/tv_two_one_two_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/colorContent"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
